<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:rsb="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity__search__events"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start"
    android:orientation="vertical"
    android:background="#f2f2f2"
    android:fitsSystemWindows="true"
    tools:context="com.cit.michael.sportshub.Activity_Search_Events">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEARCH"
            android:padding="16dp"
            android:textSize="13dp"

            />

    </LinearLayout>




    <LinearLayout

        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <com.cit.michael.sportshub.ui.MyTextView
            android:id="@+id/lblLocation"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textColor="@color/colorSub"

            />

        <com.cit.michael.sportshub.ui.My_TextView
            android:id="@+id/txtDisplayLocation"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTex" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/location"
            android:id="@+id/txtSearchLocationSE"
            android:layout_weight="0.20" />
    </LinearLayout>

    <View
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colordevider"
        android:padding="16dp"
        />


    <LinearLayout

        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <com.cit.michael.sportshub.ui.MyTextView
            android:id="@+id/lblLocationSearch"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="@color/colorSub"

            />

        <com.cit.michael.sportshub.ui.My_TextView
            android:id="@+id/txtSearchEventDate"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTex" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/date_icon"
            android:id="@+id/imgSearchDate"
            android:layout_weight="0.20"
            android:onClick="btnDate"/>
    </LinearLayout>

    <View
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colordevider"
        android:padding="16dp"
        />

        <LinearLayout

            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <com.cit.michael.sportshub.ui.MyTextView
                android:id="@+id/lblSport"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:text="Choose Sport"
                android:textColor="@color/colorSub"

                />

            <com.cit.michael.sportshub.ui.My_TextView
                android:id="@+id/txtSearchSport"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTex"
                android:hint="ie. soccer"
                />

 <!--           <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_menu_info_details"
                android:id="@+id/btnAddSport"
                android:layout_weight="0.20"
                android:onClick="btnTime"/>-->

            <!--                <com.cit.michael.sportshub.ui.MyTextView
                                android:text="New Sport"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/btnAddSport"
                                />-->
        </LinearLayout>


        <View
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colordevider"
            android:padding="16dp"
            />


        <LinearLayout

            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <com.cit.michael.sportshub.ui.MyTextView
                android:id="@+id/lblTime"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textColor="@color/colorSub"

                />

            <com.cit.michael.sportshub.ui.MyTextView
                android:text="06:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtEventSearchStart"
                android:textSize="14sp"
                android:layout_below="@+id/txtEventDate"
                android:layout_alignStart="@+id/txtEventDate"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.38" />


            <com.cit.michael.sportshub.ui.MyTextView
                android:text=" - "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_weight="0.05"
                android:textAlignment="center" />

            <com.cit.michael.sportshub.ui.MyTextView
                android:text="24:00"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/txtEventSearchFinish"
                android:onClick="btnTime"
                android:textSize="14sp"
                android:layout_below="@+id/txtEventDate"
                android:layout_alignStart="@+id/txtEventDate"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.42" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/time_icon"
                android:id="@+id/imageView6"
                android:layout_weight="0.20"
                />
        </LinearLayout>

    <LinearLayout

        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
            android:id="@+id/rangeSeekbar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:left_thumb_color="#0099ff"
            app:right_thumb_color="#0099ff"
            app:corner_radius="10"/>

        <View
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colordevider"
            android:padding="16dp"
            />
        </LinearLayout>

        <View
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colordevider"
            android:padding="16dp"
            />

    </LinearLayout>



    <com.cit.michael.sportshub.ui.MyTextView
        android:id="@+id/btnSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4c71f5"
        android:text="SEARCH"
        android:textSize="16dp"
        android:textColor="#fff"
        android:gravity="center"
        android:padding="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="0dp" />


</RelativeLayout>
