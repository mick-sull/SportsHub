<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity__event__details"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start"
    android:orientation="vertical"
    android:background="#f2f2f2"
    android:fitsSystemWindows="true"
    tools:context="com.cit.michael.sportshub.activities.Activity_Organize_Event">

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff"
                >



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#f2f2f2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EVENT DETAILS"
                        android:padding="16dp"
                        android:textSize="13dp"

                        />

                </LinearLayout>



                <LinearLayout

                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <com.cit.michael.sportshub.ui.MyTextView
                        android:id="@+id/condition1"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Event Name"
                        android:textColor="@color/colorSub"

                        />

                    <com.cit.michael.sportshub.ui.MyEditText
                        android:id="@+id/txtEventName"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTex"

                        android:maxLength="44" />
                </LinearLayout>

                <View
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colordevider"
                    android:padding="16dp"
                    />

                <LinearLayout

                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <com.cit.michael.sportshub.ui.MyTextView
                        android:id="@+id/brand1"
                        android:layout_width="114dp"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textColor="@color/colorSub"

                        />

                    <com.cit.michael.sportshub.ui.My_TextView
                        android:id="@+id/txtDisplayLocation"
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTex" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@mipmap/add_location"
                        android:id="@+id/txtSearchLocation"
                        android:layout_weight="0.20" />
                </LinearLayout>

                <View
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colordevider"
                    android:padding="16dp"
                    />


                <LinearLayout

                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <com.cit.michael.sportshub.ui.MyTextView
                        android:id="@+id/lblLocation"
                        android:layout_width="114dp"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:textColor="@color/colorSub"

                        />

                    <com.cit.michael.sportshub.ui.My_TextView
                        android:id="@+id/txtEventDate"
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTex"
                        android:onClick="btnDate"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@mipmap/date_icon"
                        android:id="@+id/imageView3"
                        android:layout_weight="0.20"
                        android:onClick="btnDate"/>
                </LinearLayout>

                <View
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colordevider"
                    android:padding="16dp"
                    />

                <LinearLayout

                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <com.cit.michael.sportshub.ui.MyTextView
                        android:id="@+id/lblTime"
                        android:layout_width="114dp"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:textColor="@color/colorSub"

                        />

                    <com.cit.michael.sportshub.ui.My_TextView
                        android:id="@+id/txtEventTime"
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTex"
                        android:onClick="btnTime"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@mipmap/time_icon"
                        android:id="@+id/imageView4"
                        android:layout_weight="0.20"
                        />
                </LinearLayout>
                <View
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colordevider"
                    android:padding="16dp"
                    />
                <LinearLayout

                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <com.cit.michael.sportshub.ui.MyTextView
                        android:id="@+id/lblDuration"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Duration (mins)"
                        android:textColor="@color/colorSub"

                        />

                    <com.cit.michael.sportshub.ui.MyEditText
                        android:id="@+id/txtEventDuration"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTex"
                        android:inputType="phone"


                        android:maxLength="5" />
                </LinearLayout>




                <View
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colordevider"
                    android:padding="16dp"
                    />




                <LinearLayout

                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <com.cit.michael.sportshub.ui.MyTextView
                        android:layout_weight="1"
                        android:id="@+id/return1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:textColor="@color/colorSub"
                        />

                    <com.cit.michael.sportshub.ui.MyTextView
                        android:id="@+id/return2"
                        android:layout_weight="0.7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:textColor="@color/colorTex"
                        />
                    <RadioGroup
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        android:id="@+id/rgEventGender"
                        android:checkedButton="@+id/rbMale"
                        android:textColor="@color/colorTex">

                        <RadioButton
                            android:text="Male"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rbMale"
                            android:textColor="@color/colorTex"/>

                        <RadioButton
                            android:text="Female"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rbFemale"
                            android:textColor="@color/colorTex"/>

                        <RadioButton
                            android:text="Mixed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/rbMixed"
                            android:textColor="@color/colorTex"/>
                    </RadioGroup>

                </LinearLayout>

                <View
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colordevider"
                    android:padding="16dp"
                    />

                <View
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colordevider"
                    android:padding="16dp"
                    />


            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fff"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#f2f2f2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EVENT DETAILS"
                    android:padding="16dp"
                    android:textSize="13dp"

                    />
                <!--android:textColor="@color/colorSub"-->

            </LinearLayout>

            <View
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colordevider"
                android:padding="16dp"
                />

            <LinearLayout

                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <com.cit.michael.sportshub.ui.MyTextView
                    android:id="@+id/lblSport"
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:text="Choose Sport"
                    android:textColor="@color/colorSub"

                    />

                <com.cit.michael.sportshub.ui.My_TextView
                    android:id="@+id/txtSelectSport"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTex"
                    android:hint="ie. soccer"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_info_details"
                    android:id="@+id/btnAddSport"
                    android:layout_weight="0.20"
                    android:onClick="btnTime"/>
            </LinearLayout>

            <View
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colordevider"
                android:padding="16dp"
                />


            <LinearLayout

                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <com.cit.michael.sportshub.ui.MyTextView
                    android:id="@+id/lblNumberOfSpace"
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:text="Number of Spaces"
                    android:textColor="@color/colorSub"

                    />

                <com.cit.michael.sportshub.ui.MyEditText
                    android:id="@+id/txtNumSpaces"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTex"
                    android:inputType="phone"
                    android:maxLength="5" />


            </LinearLayout>

            <View
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colordevider"
                android:padding="16dp"
                />

            <LinearLayout

                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <com.cit.michael.sportshub.ui.MyTextView
                    android:id="@+id/lblCost"
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:text="Cost(Per Person)"
                    android:textColor="@color/colorSub"

                    />

                <com.cit.michael.sportshub.ui.MyEditText
                    android:id="@+id/txtEventCost"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTex"
                    android:inputType="phone"
                    android:hint="€"
                    android:maxLength="7" />
            </LinearLayout>


            <View
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colordevider"
                android:padding="16dp"
                />

            <LinearLayout

                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <com.cit.michael.sportshub.ui.MyTextView
                    android:id="@+id/lblPublicGame"
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:text="Public game"
                    android:textColor="@color/colorSub"

                    />

                <CheckBox
                    android:id="@+id/cbPublicGame"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <View
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colordevider"
                android:padding="16dp"
                />

            <LinearLayout

                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <com.cit.michael.sportshub.ui.MyTextView
                    android:id="@+id/lblInvite"
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:text="Invite Friends"
                    android:textColor="@color/colorSub"

                    />

                <com.cit.michael.sportshub.ui.My_TextView
                    android:id="@+id/txtInviteFriends"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTex" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_person_add_black_24dp"
                    android:id="@+id/ivInviteFriends"
                    android:layout_weight="0.20"
                    />
            </LinearLayout>

        </LinearLayout>
            <com.cit.michael.sportshub.ui.MyTextView
                android:id="@+id/btnCreate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4c71f5"
                android:text="CREATE"
                android:textSize="16dp"
                android:textColor="#fff"
                android:gravity="center"
                android:padding="16dp"
                android:layout_alignParentBottom="true"
                />
        </LinearLayout>


    </ScrollView>





</RelativeLayout>
