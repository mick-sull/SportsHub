<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_organize_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start"
    android:orientation="vertical"
    android:background="#f2f2f2"
    android:fitsSystemWindows="true"
    tools:context="com.cit.michael.sportshub.activities.Activity_Organize_Event"

    android:scrollbars="none">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#f2f2f2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EVENT DETAILS"
                android:padding="16dp"
                android:textSize="13dp"

                />
            <!--android:textColor="@color/colorSub"-->

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="386dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/form_background">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txtEventName"
                android:hint="Event Name"
                android:textSize="18sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/location"
                    android:id="@+id/imageView4" />

                <TextView
                    android:text="Select Location"
                    android:layout_width="129dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtSearchLocation" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/add_location"
                    android:id="@+id/imageView5"
                    android:layout_weight="0.20" />

                <TextView
                    android:text="Add Location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_height="match_parent"
                    app:srcCompat="@mipmap/date_icon"
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content" />

                <TextView
                    android:text="Date (DD-MM-YYYY)"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/txtEventDate"
                    android:onClick="btnDate"
                    android:textSize="14sp"
                    android:layout_below="@+id/spinner"
                    android:layout_toEndOf="@+id/imageView2"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5.40"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/time_icon"
                    android:id="@+id/imageView2"
                    android:layout_alignBottom="@+id/txtEventTime"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:text="Time(HH:MM)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtEventTime"
                    android:onClick="btnTime"
                    android:textSize="14sp"
                    android:layout_below="@+id/txtEventDate"
                    android:layout_alignStart="@+id/txtEventDate"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:text="Duration (minutes)"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:id="@+id/textView4"
                    android:layout_weight="0.89" />

                <EditText
                    android:layout_width="69dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtEventDuration"
                    android:textAlignment="center"
                    android:inputType="phone"
                    android:hint="60" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#f2f2f2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SPORT DETAILS"
                android:padding="16dp"
                android:textSize="13dp"

                />
            <!--android:textColor="@color/colorSub"-->

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="349dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/form_background">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Select Sport"
                    android:layout_width="119dp"
                    android:layout_height="34dp"
                    android:id="@+id/txtSelectSport"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="35.73" />

                <TextView
                    android:text="Add New Sport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnAddSport"
                    android:layout_weight="13.09" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:baselineAligned="false">

                <TextView
                    android:text="Gender"
                    android:layout_width="325dp"
                    android:layout_height="34dp"
                    android:id="@+id/textView12" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:layout_weight="0.02"
                    android:id="@+id/rgEventGender"
                    android:checkedButton="@+id/rbMale">

                    <RadioButton
                        android:text="Male"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rbMale" />

                    <RadioButton
                        android:text="Female"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rbFemale" />

                    <RadioButton
                        android:text="Mixed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rbMixed" />
                </RadioGroup>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">


                <TextView
                    android:text="Number of spaces"
                    android:layout_width="195dp"
                    android:layout_height="34dp"
                    android:id="@+id/lblNumberOfSpace" />

                <EditText
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtNumSpaces"
                    android:textAlignment="center"
                    android:inputType="phone"
                    android:hint="10" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="374dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp">


                <TextView
                    android:text="Cost(Per Person)"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:id="@+id/lblCost"
                    android:layout_weight="0.74" />

                <EditText
                    android:layout_height="wrap_content"
                    android:id="@+id/txtEventCost"
                    android:textAlignment="center"
                    android:inputType="phone"
                    android:hint="€"
                    android:layout_width="wrap_content"
                    android:layout_weight="0.49" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:text="Public game"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:textSize="14sp"
                    android:id="@+id/lblPublicGame"
                    android:layout_weight="0.89" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbPublicGame"
                    android:textAlignment="center"
                    android:layout_marginRight="5dp" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</ScrollView>
